@model ResponseAnswerViewModel
@{
    ViewData["Title"] = "Answer";
}

<div class="container mt-3">


    <form asp-action="Answer" method="post">

        <div class="row">

            <div class="col-md-6">

                <div asp-validation-summary="All" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />

                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" disabled />
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="5" disabled></textarea>
                </div>

                <div class="form-group">
                    <span>@Model.Document </span><a asp-action="Download" asp-route-id="@Model.Document" class="btn btn-outline-dark">Download</a>



                </div>


                <div class="form-group">
                    <label asp-for="IsPositive"></label>
                    <select asp-for="IsPositive" class="form-control">
                        <option value="true">Olumlu</option>
                        <option value="false">Olumsuz</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="Reply"></label>
                    <textarea asp-for="Reply" class="form-control" rows="5"></textarea>
                </div>


                <div class="form-group">

                    <input type="submit" value="Yanıtla" class="btn btn-primary btn-lg btn-block" />
                </div>
            </div>






        </div>
    </form>
</div>
