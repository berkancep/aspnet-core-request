@model IEnumerable<ResponseListViewModel>
@{
    ViewData["Title"] = "List";
}

<h1>Talepler</h1>

<div class="row">
    <div class="col-md-12">

        @if (Model.Count() > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Başlık</th>
                        <th>Talep Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.Title</td>
                        <td>@item.RequestDate.ToString("dd/MM/yyyy HH:mm")</td>

                        <td>
                            <a asp-controller="Response" asp-action="Answer" asp-route-id="@item.Id" class="btn btn-info btn-sm">Yanıtla</a>
                            <a asp-controller="Response" asp-action="Report" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Rapor</a>
                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        }

        else
        {
            <div class="alert alert-danger">
                Henüz eklenmiş bir talep bulunmamaktadır.
            </div>
        }

    </div>
</div>
